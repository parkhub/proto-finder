{
  "name": "@parkhub/proto-finder",
  "version": "0.1.2",
  "author": "Daniel Olivares",
  "license": "MIT",
  "description": "Returns the full-path of a protofile in the nearest proto directory to where your application is running from.",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist --copy-files && cp ./package.json ./README.md dist",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src",
    "commit": "git-cz",
    "docs": "documentation readme src/** --section=API",
    "release": "yarn test && yarn run clean && yarn run lint && yarn run build",
    "test": "jest"
  },
  "dependencies": {
    "globby": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "documentation": "^8.0.2",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "jest": "^23.4.2",
    "prettier-eslint-cli": "^4.7.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": ["**/__tests__/**/*.test.js?(x)"],
    "collectCoverageFrom": ["src/**/*.js"],
    "modulePathIgnorePatterns": ["dist/*"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/dist/"]
  }
}
